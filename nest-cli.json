{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "./config/*.YML"
            },
            ".env",
            ".env.*"
        ],
        "watchAssets": true
    }
}
